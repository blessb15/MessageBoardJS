{{#if updateQuestionForm}}
    <div>
      <form>
        <div class="form-group">
          <label for="writer">Your Name</label>
            {{input value=writer id="writer"}}
        </div>
        <br>
        <div class="form-group">
          <label for="content">Question</label>
            {{textarea value=content id="content"}}
        </div>
        <br>
        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'updateFormShow'}}>Update</button>
  {{/if}}
